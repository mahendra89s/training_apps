<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/storeLocatorContainer"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgLocator"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/storelocator"
        android:layout_marginStart="15dp"
        app:layout_constraintRight_toLeftOf="@id/storeName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/storeName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:fontFamily="@font/gotham_bold"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintBottom_toTopOf="@id/storeAddress"
        app:layout_constraintLeft_toRightOf="@id/imgLocator"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/storeAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="13.33sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/gotham_book"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@id/storeName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imgLocator"
        android:textColor="#4f4f4f"/>
    <View
        android:id="@+id/horizontalBarMyOrder2"
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:layout_marginTop="10dp"
        android:background="#CBCBCB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>