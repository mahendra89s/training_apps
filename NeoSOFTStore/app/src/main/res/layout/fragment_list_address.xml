<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ListAddressFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvShippingAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="13.33dp"
            android:layout_marginVertical="11.67dp"
            android:fontFamily="@font/gotham_book"
            android:text="Shipping Address"
            android:textColor="#333333"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewBarAddress"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginVertical="11.67dp"
            android:background="#C8C8C8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvShippingAddress" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAddressList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginVertical="11.67dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewBarAddress" />

        <TextView
            android:id="@+id/btnPlaceOrder"
            android:layout_width="match_parent"
            android:layout_height="47.33dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="26.67dp"
            android:background="@drawable/circular_border_red"
            android:gravity="center"
            android:text="PLACE ORDER"
            android:textColor="@color/white"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rvAddressList" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>