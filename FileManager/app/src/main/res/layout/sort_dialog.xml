<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottomSheetSortContainer"
    android:background="@drawable/top_circular_border">

    <TextView
        android:id="@+id/tvSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gotham_bold"
        android:text="Sort"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/horizontalBarSort"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSort" />

    <RadioGroup
        android:id="@+id/radioGroupSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:paddingStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalBarSort">

        <RadioButton
            android:id="@+id/byNameSort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_medium"
            android:paddingVertical="10dp"
            android:text="By Name"
            android:buttonTint="#565656"
            android:textColor="#565656"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/bySizeSort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_medium"
            android:paddingVertical="10dp"
            android:text="By Size"
            android:buttonTint="#565656"
            android:textColor="#565656"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/byDateSort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_medium"
            android:paddingVertical="10dp"
            android:text="By Date"
            android:buttonTint="#565656"
            android:textColor="#565656"
            android:textSize="18sp" />

    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>